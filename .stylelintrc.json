{
  "extends": ["stylelint-config-standard", "stylelint-scss"],
  "rules": {
    "alpha-value-notation": null,
    "color-function-notation": null,
    "selector-max-id": 0,
    "selector-class-pattern": null,
    "unit-allowed-list": ["%", "deg", "rem", "ms", "dvh"]
  },
  "ignoreFiles": ["dist/**/*"],
  "defaultSeverity": "warning",
  "overrides": [
    {
      "files": ["**/*.module.scss"]
    }
  ]
}
